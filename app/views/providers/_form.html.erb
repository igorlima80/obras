<%= simple_form_for(@provider) do |f| %>
  <div class="card card-outline card-info">
    <div class="card-header">
      <h3 class="card-title">
        Dados do <%= object.class.model_name.human %> 
        <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default btn-xs" %>
        <%= f.submit 'Salvar', class: "btn btn-info btn-xs" %>
      </h3>
    </div>

    <div class="card-body">
      <div class="row">          
        <%= f.input :company_name, wrapper_html: { class: 'col-md-8' } %>
        <%= f.input :cnpj, wrapper_html: { class: 'col-md-3' } %>
        <%= f.input :email, wrapper_html: { class: 'col-md-3' } %>
        <%= f.input :salesman, wrapper_html: { class: 'col-md-3' } %>

        

      </div>
    </div>  
  </div>


  <div class="tab-pane" id="tab_2">
      <%= f.simple_fields_for :addresses do |address| %>
        <%= render 'shared/address_fields', f: address %>
      <% end %>
  </div>

  <div class="tab-pane" id="tab_2">
      <%= f.simple_fields_for :bank_accounts do |bc| %>
        <%= render 'shared/bank_account_fields', f: bc %>
      <% end %>
  </div>
  
  <div class="tab-pane" id="tab_5">
      <div class="card card-outline card-info">
        <div class="card-header">
          <h3 class="card-title">
            Contatos
          </h3>
        </div>
        <div class="card-body">
                    
          <div id="phones" class='row'>
            <div class="col-md-12">
              <%= f.simple_fields_for :phones do |fe| %>
                <%= render 'phone_fields', f: fe %>
              <% end %>

              <div class="control-group">
                <div class="controls">
                  <%= link_to_add_association f, :phones do %>
                    <div class="btn btn-success">
                      <i class="fa fa-fw fa-plus"></i> Adicionar Telefone
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>




  <div class="card card-outline card-info">
    <div class="card-footer">
      <%= f.submit class: "btn btn-info" %>
      <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default" %>
    </div>
  </div>

<% end %>