
<div class="document nested-fields">
  <div class='row'>    
    
    <%= f.input :image,  input_html: {
          direct_upload: true, 
          class: 'fileinput', 
          data: { 
            file: (rails_blob_url(f.object.image) if f.object.image.attached?)
          }
    }%> 

    

    <div class="col-md-2">
      <%= link_to_remove_association f, class: 'btn btn-danger top-32' do %>
        <i class="fa fa-fw fa-times"></i>
      <% end %>
    </div>
  </div>
</div>




