<%= render 'shared/show', box_class: 'info', object: @employment %>



<div class="card card-outline card-info">
  <div class="card-header">
    <h3 class="card-title">
      Benefícios
    </h3>
  </div>
  <div class="table">
    <div id="beneficios" class='row'>
      <div class="card-body">  
      <table class="table table-bordered table-striped no-padding datatables">
        <thead>
          <tr>
            <th width="15%">Tipo de Benefício</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
        <% @employment.benefits.each do |d| %>
          <tr>     
              <td><%= d.benefit_type.name %> </td>  
              <td><%= d.value %> </td>  
          </tr>
        <% end %>
        </tbody>
      </table>          
      </div>
    </div>
  </div>
</div>  